<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--        Color banding is very visible in emulator -->
        <item name="android:windowBackground">@drawable/ic_app_background</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="CustomHeaderTitle" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">27dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>
    <style name="CustomBackButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/ic_back_button</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">15dp</item>
    </style>
    <style name="CustomDoneButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:background">@drawable/good_button_blue</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="CustomDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- fontFamily doesn't work here and it is a known bug -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:windowBackground">@drawable/input_register_background</item>
        <item name="android:windowMinWidthMajor">314dp</item>
        <item name="android:windowMinWidthMinor">314dp</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButton</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/NeutralButton</item>
        <item name="android:colorAccent">@color/colorBlue</item>
    </style>

    <style name="PositiveButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:background">@drawable/good_button_background</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:scaleY">0.8</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="NeutralButton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorOrange</item>
        <item name="android:background">@drawable/bad_button_background</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:scaleY">0.8</item>
        <item name="android:scaleX">0.8</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/poppins_semibold</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="Divider">
        <item name="android:background">@color/doveGray</item>
    </style>

    <style name="Divider.Horizontal" parent="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>

    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>

</resources>