<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/book_image_view"
            android:layout_width="106dp"
            android:layout_height="159dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/ic_activeaddimage"
            android:background="@android:color/transparent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/clear_image"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="2dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="@+id/book_image_view"
            app:layout_constraintTop_toTopOf="@+id/book_image_view"

            android:alpha="0.75"
            app:fabCustomSize="34dp"
            android:padding="8dp"
            app:backgroundTint="@color/colorGray1"
            app:borderWidth="0dp"
            android:elevation="1dp"
            android:scaleType="centerInside"
            app:maxImageSize="32dp"

             />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--android:layout_marginStart="80dp"
    android:layout_marginBottom="133dp"
    app:layout_constraintStart_toStartOf="@+id/book_image_view"
    app:layout_constraintBottom_toBottomOf="@+id/book_image_view"-->



</LinearLayout>