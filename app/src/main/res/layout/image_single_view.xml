<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="10dp">


        <ImageButton
            android:id="@+id/book_image_view"
            android:layout_width="106dp"
            android:layout_height="159dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/add_book"
            android:background="@android:color/transparent"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/clear_image"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="2dp"
            android:layout_marginTop="2dp"
            app:layout_constraintEnd_toEndOf="@+id/book_image_view"
            app:layout_constraintTop_toTopOf="@+id/book_image_view"

            android:src="@drawable/ic_clear_button"
            app:fabCustomSize="34dp"
            android:padding="8dp"
            app:backgroundTint="@color/colorFab"
            app:borderWidth="0dp"
            app:elevation="0dp"
            android:scaleType="centerInside"
            app:maxImageSize="32dp"
             />

</androidx.constraintlayout.widget.ConstraintLayout>