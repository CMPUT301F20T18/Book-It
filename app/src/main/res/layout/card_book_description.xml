<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:id="@+id/text_book_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="36dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:ellipsize="end"
                android:text="Book Titleeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"
                android:textColor="@color/colorOrange"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/text_label_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_title"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:text="by"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_title"
                android:layout_toEndOf="@+id/text_label_by"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Authoreeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text_book_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_author"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="0dp"
                android:text="Year"
                android:textColor="@color/colorText"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text_label_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_year"
                android:layout_alignParentStart="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="ISBN:"
                android:textColor="@color/colorText"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/text_book_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_year"
                android:layout_toEndOf="@id/text_label_isbn"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="0000000000000"
                android:textColor="@color/colorText"
                android:textSize="11sp"/>

            <ImageView
                android:id="@+id/vc_spacer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_isbn"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:layout_alignParentStart="true"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                android:src="@drawable/ic_spacer" />

</RelativeLayout>