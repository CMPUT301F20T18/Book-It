<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/colorGray2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <ImageView
                android:id="@+id/image_view"
                android:src="@drawable/default_cover"
                android:contentDescription="Book cover"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_marginVertical="6dp"
                android:layout_marginStart="6dp"/>

            <TextView
                android:id="@+id/text_book_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:layout_toEndOf="@id/image_view"
                android:text="Book Title"
                android:textColor="@color/colorOrange"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/text_label_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_title"
                android:layout_toEndOf="@id/image_view"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-2dp"
                android:text="by"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text_book_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_title"
                android:layout_toEndOf="@+id/text_label_by"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-2dp"
                android:text="Author"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text_book_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_author"
                android:layout_toEndOf="@id/image_view"
                android:layout_marginStart="5dp"
                android:layout_marginTop="-2dp"
                android:text="Year"
                android:textColor="@color/colorText"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/text_label_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_year"
                android:layout_toEndOf="@id/image_view"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:text="ISBN:"
                android:textColor="@color/colorText"
                android:textSize="11sp"/>

            <TextView
                android:id="@+id/text_book_isbn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_year"
                android:layout_toEndOf="@id/text_label_isbn"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:text="0000000000000"
                android:textColor="@color/colorText"
                android:textSize="11sp"/>

            <ImageView
                android:id="@+id/vc_spacer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/text_book_isbn"
                android:layout_alignParentEnd="true"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="4dp"
                android:layout_toEndOf="@id/image_view"
                android:adjustViewBounds="false"
                android:scaleType="fitXY"
                android:src="@drawable/ic_spacer" />

            <!-- temporary -->
            <TextView
                android:id="@+id/text_book_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vc_spacer"
                android:layout_toEndOf="@+id/image_view"
                android:layout_marginStart="5dp"
                android:layout_marginTop="2dp"
                android:text="Status"
                android:textColor="@color/colorAccent"
                android:textSize="14sp"/>


        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>